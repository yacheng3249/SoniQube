generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Song {
  id     String  @id @default(uuid())
  name   String
  artist String
  cover  String
  audio  String

  @@map("songs")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  songs    UserSong[]

  @@map("users")
}

model UserSong {
  id     String  @id @default(uuid())
  user   User    @relation(fields: [userId], references: [id])
  userId String
  name   String
  artist String
  cover  String
  audio  String

  @@map("user_songs")
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  createdAt DateTime @default(now())

  @@map("verification_codes")
}