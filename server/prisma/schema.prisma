generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Song {
  id     String  @id @default(uuid())
  name   String
  artist String
  cover  String
  active Boolean
  audio  String
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  songs    UserSong[]
}

model UserSong {
  id     String  @id @default(uuid())
  user   User    @relation(fields: [userId], references: [id])
  userId String
  name   String
  artist String
  cover  String
  active Boolean
  audio  String

  @@map("user_songs")
}